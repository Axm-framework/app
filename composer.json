{
    "name": "axm/framework",
	"description": "Simple, performant and powerful PHP micro-framework for rapid web app & API development",
	"keywords": [
		"microframework",
		"rest",
		"router",
		"php",
		"framework"
	],
	"homepage": "https://axmphp.com",
	"type": "library",
	"license": "MIT",
    "authors": [
        {
            "name": "Juan Cristobal",
            "email": "juancristobalgd1@gmail.com"
        }
    ],
	"require": {
        "php": "^7.3 || ^8.0",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-xml": "*",
        "ext-openssl": "*",
        "ext-zip": "*",
        "ext-mbstring": "*",
        "psr/log": "^1.1",
        "symfony/var-dumper": "^6.2",
        "vlucas/phpdotenv": "^5.5",
		"axm/http": "*",
		"axm/views": "*",
		"axm/exception": "*",
		"axm/middlewares": "*",
		"axm/session": "*",
		"axm/console": "*",
		"axm/helpers": "*"
	},
	"autoload": {
		"psr-4": {
			"Axm\\": "src"
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true,

    "require-dev": {
        "phpunit/phpunit": "^9.6"
    }
}
