{
    "name": "axm/app",
    "type": "framework",
    "description": "The AXM framework PHP",
    "keywords": [
        "framework",
        "mvc",
        "rapid development",
        "web development",
        "axm",
        "orm",
        "form",
        "validation",
        "psr-7"
    ],
    "homepage": "https://axmphp.com",
    "license": "MIT",
    "require": {
        "axm/framework": "*",
        "axm/validation": "dev-main",
        "illuminate/database": "^10.13.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6"
    },
    "suggest": {
        "ext-fileinfo": "Improves mime type detection for files"
    },
    "autoload": {
        "psr-4": {
            "App\\Commands\\": "App/Commands/",
            "App\\Config\\": "App/Config/",
            "App\\Controllers\\": "App/Controllers/",
            "App\\Database\\": "App/Database/",
            "App\\Languages\\":"App/Languages/",
            "App\\Libraries\\":"App/Libraries/",
            "App\\Middlewares\\": "App/Middlewares/",
            "App\\Models\\": "App/Models/",
            "App\\Raxm\\": "App/Raxm/",
            "App\\Tests\\": "App/Tests/",
            "App\\Views\\": "App/Views/"
	}
    },
    
    "config": {
        "optimize-autoloader": true,
        "sort-packages": false
    },

    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit"
    },
    "support": {
        "forum":  "http://forum.Axmphp.com/",
        "source": "https://github.com/Axmphp/Axmv1",
        "slack":  "https://Axmchat.slack.com"
    }
}
